<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
 
    <PackageId>Wiaoj.Serialization.Observability.OpenTelemetry</PackageId>
    <Title>Wiaoj Serialization OpenTelemetry</Title>
    <Description>OpenTelemetry instrumentation package for Wiaoj Serialization library. Provides distributed tracing and metrics collection for serialization operations.</Description>
    <PackageTags>serialization;opentelemetry;instrumentation;tracing;metrics;observability;wiaoj</PackageTags>
     
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup> 
    <PackageReference Include="OpenTelemetry.Api" Version="1.12.0" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Wiaoj.Serialization.Extensions.DependencyInjection" /> 
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Preca\Wiaoj.Preca\Wiaoj.Preca.csproj" />
    <ProjectReference Include="..\..\Core\Wiaoj.Serialization.Abstractions\Wiaoj.Serialization.Abstractions.csproj" />
  </ItemGroup>

</Project>
